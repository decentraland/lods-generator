{
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", {"tsconfig": "test/tsconfig.json"}]
    },
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/migrations/**"
    ],
    "testMatch": ["**/*.spec.(ts)"],
    "testEnvironment": "node"
  }